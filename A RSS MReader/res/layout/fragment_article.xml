<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

     <TextView
         android:id="@+id/article_rss_titleView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="10dp"
         android:text="@string/feed_title"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#BBBBBB"
         android:textSize="15sp" />

     <TextView
         android:id="@+id/article_titleView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/article_rss_titleView1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="8dp"
         android:text="@string/article_title"
         android:textColor="#F26522"
         android:textSize="16sp" />

     <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/article_button"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/article_titleView2"
         android:background="#222222"
         android:layout_marginTop="10dp" >

         <TextView
             android:id="@+id/article_descriptionView3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/article_description"
             android:textColor="#DEEEEE"           
             android:textSize="16sp" />
         
     </ScrollView>

     
     <Button
         android:id="@+id/article_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:text="@string/article_button" />
     
</RelativeLayout>
